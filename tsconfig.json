{
  "compilerOptions" : {
    "target"                           : "ESNext",
    "useDefineForClassFields"          : true,
    "lib"                              : [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs"                          : false,
    "skipLibCheck"                     : false,
    "esModuleInterop"                  : false,
    "allowSyntheticDefaultImports"     : true,
    "strict"                           : true,
    "forceConsistentCasingInFileNames" : true,
    "module"                           : "ESNext",
    "moduleResolution"                 : "Node",
    "resolveJsonModule"                : true,
    "isolatedModules"                  : true,
    "noEmit"                           : true,
    "jsx"                              : "react-jsx",
    "baseUrl"                          : "./",
    "paths"                            : {
      "@data/*"       : [
        "src/data/*"
      ],
      "@components/*" : [
        "src/components/*"
      ],
      "@hooks/*"      : [
        "src/hooks/*"
      ],
      "@res/*"        : [
        "src/res/*"
      ],
      "@theme/*"      : [
        "src/theme/*"
      ],
      "@util/*"       : [
        "src/util/*"
      ],
      "@navigation/*" : [
        "src/navigation/*"
      ]
    }
  },
  "include"         : [
    "src",
    "src/types"
  ],
  "references"      : [
    {
      "path" : "./tsconfig.node.json"
    }
  ]
}
